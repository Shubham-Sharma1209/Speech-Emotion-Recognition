Main_screen


<Main_screen>:
    orientation: 'vertical'
    size:root.width,root.height
    font_name:'Georgia'
    canvas.before:
        Color:
            rgba:0.1,0.1,0.7,0.5
        Rectangle:
            size:root.width, root.height
            pos: self.pos
            source:'background_2.jpeg'
    FloatLayout:
        Label:
            font_name: 'Georgia Bold'
            text:'Speech Emotion Recognition'
            font_size: '25dp'
            pos_hint:{"x":0,"y":0.45}
        Button:
            text:'Select an audio file'
            font_size: '22dp'
            size_hint: 0.25,0.07
            pos_hint: {"x":0.2,"y":0.75}
            on_press: root.call_adrr()
            canvas:
                Color: 
                    rgba: 0.8,0.3,0.3,0.8
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius: 25,0,0,25
        TextInput:
            id: text_input_address
            text:root.file_path
            font_size: '16dp'
            diabled: True
            size_hint: 0.25,0.07
            pos_hint: {"x":0.53,"y":0.75}
        Button:
            text: 'Speak'
            size_hint:0.1,0.07
            pos_hint:{"x":0.45,"y":0.65}
        Button:
            text:'Check'
            size_hint:0.2,0.07
            pos_hint:{'x':0.25,'y':0.2}
            # on_press:self.show_emo()

        Button:
            text: 'Exit'
            size_hint:0.2,0.07
            pos_hint:{'x':0.55,'y':0.2}
            on_press:app.stop()

<FileChoosePopup>:
    title: "Choose a sound File"
    size_hint: .9, .9
    auto_dismiss: False

    BoxLayout:
        orientation: "vertical"
        FileChooser:
            id: filechooser
            FileChooserIconLayout

        BoxLayout:
            size_hint: (1, 0.1)
            pos_hint: {'center_x': .5, 'center_y': .5}
            spacing: 20
            Button:
                text: "Cancel"
                on_release: root.dismiss()
            Button:
                text: "Load"
                on_release: root.load(filechooser.selection)
                id: ldbtn
                disabled: True if filechooser.selection==[] else False